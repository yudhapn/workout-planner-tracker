<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="navCreateCommunity"
            type="id.ypran.workouttracker.presentation.bottomnavigation.NavigationModelItem.NavCreateCommunity" />
        <variable
            name="navListener"
            type="id.ypran.workouttracker.presentation.bottomnavigation.NavigationAdapter.NavigationAdapterListener" />
    </data>
    <LinearLayout
        android:paddingHorizontal="@dimen/grid_4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:onClick="@{() -> navListener.onNavCreateCommunityClicked()}"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/email_sender_profile_image_size"
            android:layout_height="@dimen/email_sender_profile_image_size"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/email_sender_profile_content_desc"
            app:srcCompat="@drawable/ic_new_community"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginStart="@dimen/grid_4"
            android:id="@+id/nav_item_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_drawer_menu_item_height"
            android:gravity="center_vertical|start"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{navCreateCommunity.name}"
            android:textColor="@color/color_on_primary_surface_emphasis_medium"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="Pine Elementary" />
    </LinearLayout>

</layout>
